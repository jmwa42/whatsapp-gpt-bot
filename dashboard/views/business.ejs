<% layout('layout', { title: 'Business Info' }) %>
<h1>📝 Edit Business Info</h1>
<form method="POST" action="/business" class="mt-3">
  <div class="mb-3">
    <label>Opening Hours</label>
    <textarea name="opening_hours" class="form-control"><%= biz.opening_hours %></textarea>
  </div>
  <div class="mb-3">
    <label>Location</label>
    <input name="location" class="form-control" value="<%= biz.location %>">
  </div>
  <div class="mb-3">
    <label>Contact</label>
    <input name="contact" class="form-control" value="<%= biz.contact %>">
  </div>
  <h4>Price List</h4>
  <% Object.entries(biz.price_list).forEach(([k,v]) => { %>
    <div class="row mb-2">
      <div class="col"><input name="services" class="form-control" value="<%= k %>"></div>
      <div class="col"><input name="prices" class="form-control" value="<%= v %>"></div>
    </div>
  <% }) %>
  <div class="row mb-2">
    <div class="col"><input name="services" class="form-control" placeholder="Service"></div>
    <div class="col"><input name="prices" class="form-control" placeholder="Price"></div>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

