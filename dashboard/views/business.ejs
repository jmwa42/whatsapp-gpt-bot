<% layout('layout') -%>
<h1>📝 Edit Business Info</h1>
<form method="POST" action="/business">
  <label>Opening Hours:<br>
    <textarea name="opening_hours"><%= biz.opening_hours %></textarea>
  </label><br>
  <label>Location:<br>
    <input name="location" value="<%= biz.location %>" />
  </label><br>
  <label>Contact:<br>
    <input name="contact" value="<%= biz.contact %>" />
  </label><br>
  <h3>Price List</h3>
  <% Object.entries(biz.price_list).forEach(([k,v]) => { %>
    <input name="services" value="<%= k %>" />
    <input name="prices" value="<%= v %>" /><br>
  <% }) %>
  <input name="services" placeholder="New service"/>
  <input name="prices" placeholder="Price"/><br>
  <button type="submit">Save</button>
</form>

