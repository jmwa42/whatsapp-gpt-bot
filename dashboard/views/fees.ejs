<form method="POST" action="/fees">
  <div id="fees-list">
    <% Object.entries(fees).forEach(([cls, amt], i) => { %>
      <div class="row mb-2">
        <div class="col">
          <input type="text" name="classes" value="<%= cls %>" class="form-control" placeholder="Class e.g. Grade 1">
        </div>
        <div class="col">
          <input type="text" name="amounts" value="<%= amt %>" class="form-control" placeholder="Amount e.g. 15000">
        </div>
      </div>
    <% }) %>
  </div>
  <button type="submit" class="btn btn-primary">Save Fees</button>
</form>

